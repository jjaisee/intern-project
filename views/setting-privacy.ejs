<%- include("partials/user-home-header"); -%>

<section id="user-home">
  <div class="fluid-container user-home-container">
    <div class="col-10 user-home-container-right">
      <div class="general">
        <h3 class="setting-type-heading">Privacy</h3>
        <p class="setting-heading-p">Control who can contact you and the information others can see on your public profile.</p>
        <hr>
        <div class="setting-privacy">
          <div class="d-flex">
            <div class="p-2">
              <h6 class="setting-privacy-subheading">Set who can contact you on Letzget2gether</h6>
            </div>
            <div class="p-2 ml-auto">
              <div class="form-group col">
                <select id="inputState" class="form-control">
                  <option selected>Organizer only</option>
                  <option>Member on my Group</option>
                  <option>Anyone</option>
                </select>
              </div>
            </div>
          </div>
          <div class="d-flex">
            <div class="p-2">
              <h6 class="setting-privacy-subheading">Show your Group on Profile</h6>
              <p class="setting-privacy-subheading-p">On your profile, anyone can see all the Letzget2gether you belong to.</p>
            </div>
            <div class="p-2 ml-auto">
              <div class="form-group">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" checked>
                </div>
              </div>
            </div>
          </div>
          <a href="#" class="btn btn-secondary btn-sm">Save Changes</a>
        </div>

      </div>
      <section>

      </section>
      <%- include("partials/footer"); -%>
    </div>
    <div class="col-2 sticky-sidebar">
      <a href="/setting-profile" type="button" class="user-home-left-btn btn btn-light btn-block">Profile</a>
      <a href="/setting-privacy" type="button" class="user-home-left-btn user-home-left-btn-active btn btn-light btn-block">Privacy</a>
      <a href="/setting-organizer-subscription" type="button" class="user-home-left-btn btn btn-light btn-block">Organizer Subscription</a>
      <a href="/setting-payment-methods" type="button" class="user-home-left-btn btn btn-light btn-block">Payment Methods</a>
      <a href="/setting-payment-made" type="button" class="user-home-left-btn btn btn-light btn-block">Payment Made</a>
    </div>
  </div>
</section>
